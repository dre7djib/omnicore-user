// Global Prisma schema based on omnicore-user/DB.sql

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Country {
  id          String           @id @default(uuid()) @db.Uuid
  name        String
  countryCode String           @map("country_code")
  currency    String?
  isActive    Boolean          @default(true) @map("is_active")
  createdAt   DateTime         @default(now()) @map("created_at")

  authUsers       AuthUser[]
  users           User[]
  userAddresses   UserAddress[]
  countryProducts CountryProduct[]

  @@map("COUNTRIES")
}

model Product {
  id          String         @id @default(uuid()) @db.Uuid
  name        String
  description String?
  isActive    Boolean        @default(true) @map("is_active")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @default(now()) @map("updated_at")

  countryProducts CountryProduct[]
  productImages   ProductImage[]

  @@map("PRODUCTS")
}

model Role {
  id          String     @id @default(uuid()) @db.Uuid
  name        String
  description String?

  userRoles UserRole[]

  @@map("ROLES")
}

model AuthUser {
  id            String        @id @default(uuid()) @db.Uuid
  email         String        @unique
  passwordHash  String        @map("password_hash")
  countryId     String?       @map("country_id") @db.Uuid
  isActive      Boolean       @default(true) @map("is_active")
  emailVerified Boolean       @default(false) @map("email_verified")
  lastLoginAt   DateTime?     @map("last_login_at")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @default(now()) @map("updated_at")

  country  Country?     @relation(fields: [countryId], references: [id])
  user     User?
  roles    UserRole[]
  sessions AuthSession[]

  @@map("AUTH_USERS")
}

model User {
  id          String   @id @db.Uuid
  countryId   String?  @map("country_id") @db.Uuid
  firstName   String?  @map("first_name")
  lastName    String?  @map("last_name")
  phoneNumber String?  @map("phone_number")
  status      String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @map("updated_at")

  authUser      AuthUser      @relation(fields: [id], references: [id])
  country       Country?      @relation(fields: [countryId], references: [id])
  addresses     UserAddress[]
  preferences   UserPreference[]
  auditLogs     UserAuditLog[]

  @@map("USERS")
}

model UserRole {
  userId     String   @map("user_id") @db.Uuid
  roleId     String   @map("role_id") @db.Uuid
  assignedAt DateTime @default(now()) @map("assigned_at")

  user AuthUser @relation(fields: [userId], references: [id])
  role Role     @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
  @@map("USER_ROLES")
}

model AuthSession {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  refreshToken String   @map("refresh_token") @db.Text
  expiresAt    DateTime @map("expires_at")
  ipAddress    String?  @map("ip_address")
  userAgent    String?  @map("user_agent") @db.Text
  createdAt    DateTime @default(now()) @map("created_at")

  user AuthUser @relation(fields: [userId], references: [id])

  @@map("AUTH_SESSIONS")
}

model CountryProduct {
  id          String   @id @default(uuid()) @db.Uuid
  productId   String   @map("product_id") @db.Uuid
  countryId   String   @map("country_id") @db.Uuid
  price       Decimal  @db.Decimal(10, 2)
  currency    String?
  quantity    Int      @default(0)
  isAvailable Boolean  @default(true) @map("is_available")
  updatedAt   DateTime @default(now()) @map("updated_at")

  product Product @relation(fields: [productId], references: [id])
  country Country @relation(fields: [countryId], references: [id])

  @@map("COUNTRY_PRODUCTS")
}

model ProductImage {
  id        String  @id @default(uuid()) @db.Uuid
  productId String  @map("product_id") @db.Uuid
  url       String  @db.Text
  isPrimary Boolean @default(false) @map("is_primary")

  product Product @relation(fields: [productId], references: [id])

  @@map("PRODUCT_IMAGES")
}

model UserAddress {
  id         String   @id @default(uuid()) @db.Uuid
  userId     String   @map("user_id") @db.Uuid
  countryId  String?  @map("country_id") @db.Uuid
  street     String?  @db.Text
  city       String?
  postalCode String?  @map("postal_code")
  isPrimary  Boolean  @default(false) @map("is_primary")
  createdAt  DateTime @default(now()) @map("created_at")

  user    User     @relation(fields: [userId], references: [id])
  country Country? @relation(fields: [countryId], references: [id])

  @@map("USER_ADDRESSES")
}

model UserPreference {
  id                   String  @id @default(uuid()) @db.Uuid
  userId               String  @map("user_id") @db.Uuid
  language             String?
  timezone             String?
  notificationsEnabled Boolean @default(true) @map("notifications_enabled")

  user User @relation(fields: [userId], references: [id])

  @@map("USER_PREFERENCES")
}

model UserAuditLog {
  id          String   @id @default(uuid()) @db.Uuid
  userId      String   @map("user_id") @db.Uuid
  action      String
  performedBy String?  @map("performed_by") @db.Uuid
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id])

  @@map("USER_AUDIT_LOGS")
}

